<h1>My Page</h1>
<%= form_with model: @user, url: mypage_path, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group"
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="form-group">
    <%= f.label :profile %>
    <%= f.text_field :profile %>
  </div>

  <div class="action">
    <%= f.submit "Update" %>
  </div>
<% end %>