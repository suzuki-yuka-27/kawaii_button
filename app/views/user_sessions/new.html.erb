<h1>Login</h1>
<%= form_with url: login_path, local: true do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="action">
    <%= f.submit "Login", class: "btn btn-primary" %>
  </div>
<% end %>